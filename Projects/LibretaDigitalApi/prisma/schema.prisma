generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["ADMLDA", "ADMPER", "ADMUSR"]
}

model Menor {
  id              Int      @id @map("iden_menor")
  nombre          String   @map("desc_nombre")
  apellidoP       String   @map("desc_apellido_paterno")
  apellidoM       String?  @map("desc_apellido_materno")
  fechaNacimiento DateTime @map("fech_nacimiento")

  @@map("lda_menor")
  @@schema("ADMLDA")
}

model Grado {
  id     Int    @id @map("iden_grado")
  nombre String @map("desc_nombre")

  @@map("lda_grado")
  @@schema("ADMLDA")
}
